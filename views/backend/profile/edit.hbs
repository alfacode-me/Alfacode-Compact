{{!< backend}}
<div class="box box-primary mini-widget">
    <div class="box-header with-border">
        <h3 class="box-title">Ubah Profil</h3>
    </div>
    <form id="formSave" method="post" action="/backend/profile/save" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="fotoProfil">Foto Profil</label>
                <div id="image-holder">
                    <img id="image-holder" src="/src/backend/img/profile/{{user.img}}" class="img-circle" alt="{{user.img}}" style="display: -webkit-box;width: 75px;height: 75px;position: absolute;border: 2px solid;border-color: #d2d6de;">
                </div>
                <div style="margin: 15px 0 30px 85px;">
                    <small>* Pastikan rasio gambar persegi</small>
                    <input id="img" name="img" type="file">
                </div>
            </div>
            <div class="form-group">
                <label>Username</label>
                <div class="input-group">
                    <span class="input-group-addon">@</span>
                    <input id="username" type="text" class="form-control" placeholder="Username" value="{{user.username}}">
                </div>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input id="password" type="password" class="form-control" placeholder="Password" value="{{user.password}}">
            </div>
            <div class="form-group">
                <label>Nama Lengkap</label>
                <input id="fullname" type="text" class="form-control" placeholder="Nama Lengkap" value="{{user.fullname}}">
            </div>
            <div class="form-group">
                <label>Level Pengguna</label>
                <select id="level" class="form-control">
                    <option value="Administrator" {{#if user.u.a}} selected {{/if}}>Administrator</option>
                    <option value="Karyawan" {{#if user.u.k}} selected {{/if}}>Karyawan</option>
                </select>
            </div>
            <div class="form-group">
                <label>Jenis Kelamin</label>
                <select id="gender" class="form-control">
                    <option value="Laki-laki" {{#if user.g.l}} selected {{/if}}>Laki-laki</option>
                    <option value="Perempuan" {{#if user.g.p}} selected {{/if}}>Perempuan</option>
                </select>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="email" type="email" class="form-control" placeholder="Email" value="{{user.email}}">
            </div>
            <div class="form-group">
                <label>No. Handphone</label>
                <input id="telp" type="text" class="form-control" placeholder="No. Handphone" value="{{user.telp}}">
            </div>
            <div class="form-group">
                <label>Alamat</label>
                <textarea id="address" class="form-control" rows="5">{{user.address}}</textarea>
            </div>
        </div>
    </form>
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-6">
                <a id="cancel" href="/backend/profile/view" class="btn btn-flat btn-block btn-danger">Batal</a>
            </div>
            <div class="col-xs-6">
                <button id="save" class="btn btn-primary btn-block btn-flat" data-loading-text="<i class='fa fa-spinner fa-spin'></i>">Simpan</button>
            </div>
        </div>
    </div>
</div>