<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/src/backend/img/profile/{{user.img}}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>
                    {{user.fullname}}
                </p>
                <a href="/backend/profile/view"><i class="fa fa-circle text-success"></i> {{user.email}}</a>
            </div>
        </div>
        <!-- search form -->
        <form action="/backend/search"  method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Pencarian...">
                <span class="input-group-btn"><button type="submit" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button></span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MENU NAVIGASI</li>
            {{menu req.baseUrl menuleftbar.dashboard}}
            {{menu req.baseUrl menuleftbar.service}}
            {{menu req.baseUrl menuleftbar.client}}
            {{menu req.baseUrl menuleftbar.about}}
            {{menu req.baseUrl menuleftbar.team}}
            {{menu req.baseUrl menuleftbar.contact}}
            {{menugroup req.baseUrl menuleftbar.news}}
            {{menugroup req.baseUrl menuleftbar.files}}
            {{menugroup req.baseUrl menuleftbar.profile}}
            {{menu req.baseUrl menuleftbar.setting}}
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>