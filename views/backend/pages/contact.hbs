{{!< backend}}
<div class="box box-primary mini-widget">
    <div class="box-header with-border">
        <h3 class="box-title">Kontak</h3>
    </div>
    <form id="formSave" method="post" action="/backend/profile/save" enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label>Website</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="website" type="text" class="form-control" placeholder="Url Website"
                           value="{{contact.website}}">
                </div>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="email" type="email" class="form-control" placeholder="Email" value="{{contact.email}}">
            </div>
            <div class="form-group">
                <label>Alamat</label>
                <textarea id="address" class="form-control" rows="3">{{contact.address}}</textarea>
            </div>
            <div class="form-group">
                <label>No. Telp</label>
                <input id="telp" type="text" class="form-control" placeholder="No. Telp" value="{{contact.telp}}">
            </div>
            <div class="form-group">
                <label>No. Handphone</label>
                <input id="handphone" type="text" class="form-control" placeholder="No. Handphone"
                       value="{{contact.handphone}}">
            </div>
            <div class="form-group">
                <label>LinkedIn</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="linkin" type="text" class="form-control" placeholder="Url LinkedIn"
                           value="{{contact.linkin}}">
                </div>
            </div>
            <div class="form-group">
                <label>Facebook</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="facebook" type="text" class="form-control" placeholder="Url Facebook"
                           value="{{contact.facebook}}">
                </div>
            </div>
            <div class="form-group">
                <label>Instagram</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="instagram" type="text" class="form-control" placeholder="Url Instagram"
                           value="{{contact.instagram}}">
                </div>
            </div>
            <div class="form-group">
                <label>Twitter</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="twitter" type="text" class="form-control" placeholder="Url Twitter"
                           value="{{contact.twitter}}">
                </div>
            </div>
            <div class="form-group">
                <label>Google+</label>
                <div class="input-group">
                    <span class="input-group-addon">http://</span>
                    <input id="googleplus" type="text" class="form-control" placeholder="Url Google+"
                           value="{{contact.googleplus}}">
                </div>
            </div>

        </div>
    </form>
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-6">
                <a id="cancel" href="/backend/pages/contact" class="btn btn-flat btn-block btn-danger">Batal</a>
            </div>
            <div class="col-xs-6">
                <button id="contact-save" class="btn btn-primary btn-block btn-flat"
                        data-loading-text="<i class='fa fa-spinner fa-spin'></i>">Simpan
                </button>
            </div>
        </div>
    </div>
</div>