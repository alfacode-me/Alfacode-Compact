{{!< frontend}}

{{> frontend-title}}

<section class="section-padding">

    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <form name="contact-form" id="contactForm" method="POST">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-field">
                                <input type="text" name="name" class="validate" id="name">
                                <label for="name" class="">Nama</label>
                            </div>

                        </div><!-- /.col-md-6 -->

                        <div class="col-md-6">
                            <div class="input-field">
                                <input id="phone" type="tel" name="phone" class="validate">
                                <label for="phone" class="">Nomor Telphone</label>
                            </div>
                        </div><!-- /.col-md-6 -->
                    </div><!-- /.row -->

                    <div class="row">

                        <div class="col-md-6">
                            <div class="input-field">
                                <input id="website" type="text" name="website" class="validate">
                                <label for="website" class="">Subjek</label>
                            </div>
                        </div><!-- /.col-md-6 -->

                        <div class="col-md-6">
                            <div class="input-field">
                                <label class="sr-only" for="email">Email</label>
                                <input id="email" type="email" name="email" class="validate">
                                <label for="email" data-error="wrong" data-success="right" class="">Email</label>
                            </div>
                        </div><!-- /.col-md-6 -->
                    </div><!-- /.row -->

                    <div class="input-field">
                        <textarea name="message" id="message" class="materialize-textarea"></textarea>
                        <label for="message" class="">Pesan</label>
                    </div>

                    <button type="submit" name="submit" class="waves-effect waves-light btn submit-button mt-30">Kirim Pesan</button>
                </form>
            </div><!-- /.col-md-8 -->

            <div class="col-md-4 contact-info">

                <address>
                    <i class="material-icons brand-color"></i>
                    <div class="address">
                        <p>{{contact.address}}</p>
                    </div>

                    <i class="material-icons brand-color"></i>
                    <div class="phone">
                        <p>Telp: {{contact.telp}}
                            <br>
                            Phone: {{contact.handphone}}</p>
                    </div>

                    <i class="material-icons brand-color"></i>
                    <div class="mail">
                        <p><a href="mailto:#">{{contact.email}}</a><br>
                            <a href="#">{{contact.website}}</a></p>
                    </div>
                </address>
            </div><!-- /.col-md-4 -->
        </div><!-- /.row -->
    </div>

</section>